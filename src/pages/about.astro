---
import "../styles/global.css";
import Navigation from "../components/navigation.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Kevin Knights",
  country: "Panama",
  occupation: "Machine Learning Engineer",
};

const programmingLanguages = ["Python", "R", "SQL"];
const technicalSkills = [
  "Software Development",
  "Machine Learning",
  "Data Engineering",
  "Cloud Computing",
  "MLOps",
  "DevOps",
  "Process Automation",
  "Data Management",
  "Data Processing",
  "Metrics Development",
  "Quality Assurance/Control",
  "Documentation",
  "Agile Methodology",
  "Docker",
  "Tools & Platforms",
  "Version Control Systems",
];
const softSkills = [
  "Critical Thinking",
  "Problem-Solving",
  "Growth Mindset",
  "Effective Communication",
  "Leadership",
  "Innovation",
];
const languages = [
  "Spanish (Native)",
  "English (Fluent)",
  "Portuguese (Fluent)",
